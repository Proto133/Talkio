
<div class="flex">
  <article>
  <section class="editheader">
  <a href="/dashboard" class="right"> &larr; Back</a>
  <h2 class="title mt-5">Edit Post</h2><hr>
  </section>
  <div class="card formdiv">
  <form class=" edit-post-form">
    <div class="edittitle">
        <label class="title " for="title">Post Title:</label>
      <input class="input" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div class="editbox">
        <label class="title" for="post-content">Post Content:</label>
      <textarea name="post-content" type="text" value="">{{post.post_content}}</textarea>
    </div>
    <div class="center">
       Created on {{format_date post.created_at}} {{format_time post.created_at}}
      |
      <a href="/post/{{post.id}}">{{#if post.comments.length}}{{post.comments.length}} {{format_plural "comment" post.comments.length}}{{else}} No Comments{{/if}}</a>
    </div>
    <div class="buttons">
    <button type="submit" class="waves-effect waves-light btn"><i class="material-icons right">save</i>Save Post</button>
    <button type="button" class="waves-effect waves-light btn"><i class="material-icons right">delete_forever</i>Delete Post</button>
    </div>
  </form>
  </div>
</article>
</div>

{{> comments post.comments}}

<script src="/js/editpost.js"></script>
<script src="/js/deletepost.js"></script>
<script src="/js/comment.js"></script>